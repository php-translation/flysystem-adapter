{
    "name": "php-translation/flysystem-adapter",
    "description": "Adapter for flysystem.",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Nyholm",
            "email": "tobias.nyholm@gmail.com"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0",
        "php-translation/common": "^0.2",
        "php-translation/symfony-storage": "^0.1",
        "symfony/translation": "^2.7 || ^3.0",
        "league/flysystem": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.5 || ^5.4",
        "nyholm/symfony-bundle-test": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Translation\\PlatformAdapter\\Flysystem\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Translation\\PlatformAdapter\\Flysystem\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    }
}
